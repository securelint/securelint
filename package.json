{
  "name": "securelint-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm build && node --test tests/*.test.mjs",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "@types/node": "25.0.9"
  },
  "engines": {
    "node": ">=20"
  }
}
